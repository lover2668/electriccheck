<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_xiugaimima" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/oldpsw_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/zhanghu_img"
            android:background="@null"
            android:hint="请输入旧密码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/newpsw_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/huoquyanzhengma_tv"
            android:layout_toRightOf="@+id/mima_img"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="number"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Switch
            android:id="@+id/myswitch"
            android:text="显示密码"
            android:checked="true"
            android:textColor="@color/gray_8f"
            android:switchPadding="10sp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <Button
        android:id="@+id/define"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_n"
        android:text="确认重置"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>